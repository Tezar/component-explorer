<vbox width="100%" style="padding:10px">
    <hbox width="100%">
        <vbox width="100%">
            <section-header text="Scrollviews" />
            <hbox width="100%">
                <scrollview width="100%" height="200" contentWidth="100%" emptyContentsText="No items!">
                    <vbox id="scrollview1Contents" horizontalAlign="center" />
                </scrollview>
                <scrollview width="100%" height="200" contentWidth="100%">
                    <vbox styleName="empty-contents-component">
                        <spinner horizontalAlign="center" />
                        <label text="Waiting for items" />
                    </vbox>
                    <vbox id="scrollview2Contents" horizontalAlign="center" />
                </scrollview>
                <scrollview width="100%" height="200" contentWidth="100%">
                    <vbox styleName="empty-contents-component">
                        <progress indeterminate="true" />
                        <label text="I can be anything!" horizontalAlign="center" />
                    </vbox>
                    <vbox id="scrollview3Contents" horizontalAlign="center" />
                </scrollview>
            </hbox>
        </vbox>    

        <vbox width="200">
            <section-header text="Options" />
            <hbox width="100%">
                <button id="addItemsScrollViewButton" text="Add" width="100%" />
                <button id="removeItemsScrollViewButton" text="Remove" width="100%" />
            </hbox>
        </vbox>
    </hbox>

    <spacer height="10" />

    <hbox width="100%">
        <vbox width="100%">
            <section-header text="Listviews" />
            <hbox width="100%">
                <listview id="listview1" width="100%" height="200" emptyContentsText="No items!" />
                <listview id="listview2" width="100%" height="200">
                    <vbox styleName="empty-contents-component">
                        <spinner horizontalAlign="center" />
                        <label text="Waiting for items" />
                    </vbox>
                </listview>
                <listview id="listview3" width="100%" height="200">
                    <vbox styleName="empty-contents-component">
                        <progress indeterminate="true" />
                        <label text="I can be anything!" horizontalAlign="center" />
                    </vbox>
                </listview>
            </hbox>
        </vbox>    

        <vbox width="200">
            <section-header text="Options" />
            <hbox width="100%">
                <button id="addItemsListViewButton" text="Add" width="100%" />
                <button id="removeItemsListViewButton" text="Remove" width="100%" />
            </hbox>
        </vbox>
    </hbox>

    <spacer height="10" />

    <hbox width="100%">
        <vbox width="100%">
            <section-header text="Listviews" />
            <hbox width="100%">
                <tableview id="tableview1" width="100%" height="200" emptyContentsText="No items!">
                    <header width="100%">
                        <column id="colA" text="Col A" width="100%" />
                        <column id="colB" text="Col B" width="100%" />
                    </header>
                </tableview>
                <tableview id="tableview2" width="100%" height="200">
                    <header width="100%">
                        <column id="colA" text="Col A" width="100%" />
                        <column id="colB" text="Col B" width="100%" />
                    </header>
                    <vbox styleName="empty-contents-component">
                        <spinner horizontalAlign="center" />
                        <label text="Waiting for items" />
                    </vbox>
                </tableview>
                <tableview id="tableview3" width="100%" height="200">
                    <header width="100%">
                        <column id="colA" text="Col A" width="100%" />
                        <column id="colB" text="Col B" width="100%" />
                    </header>
                    <vbox styleName="empty-contents-component">
                        <progress indeterminate="true" />
                        <label text="I can be anything!" horizontalAlign="center" />
                    </vbox>
                </tableview>
            </hbox>
        </vbox>    

        <vbox width="200">
            <section-header text="Options" />
            <hbox width="100%">
                <button id="addItemsTableViewButton" text="Add" width="100%" />
                <button id="removeItemsTableViewButton" text="Remove" width="100%" />
            </hbox>
        </vbox>
    </hbox>
</vbox>