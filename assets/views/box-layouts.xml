<?xml version="1.0" encoding="utf-8" ?>
<vbox width="100%" style="padding:10px;">
    <hbox width="100%">
        <vbox width="100%" style="padding-top:20px;">
            <box id="box1" styleName="outline" style="padding: 5px;">
                <box width="70" height="25" style="background-color: #B41C2B;border:1px solid #B41C2B;background-opacity: .1" />
                <box width="50%" height="25" style="background-color: #B41C2B;border:1px solid #B41C2B;background-opacity: .1" horizontalAlign="center" />
                <box width="70" height="25" style="background-color: #B41C2B;border:1px solid #B41C2B;background-opacity: .1" horizontalAlign="right" />
                
                <box width="70" height="32%" style="background-color: #009F42;border:1px solid #009F42;background-opacity: .1" verticalAlign="center" />
                <box width="50%" height="32%" style="background-color: #009F42;border:1px solid #009F42;background-opacity: .1" verticalAlign="center" horizontalAlign="center" />
                <box width="70" height="32%" style="background-color: #009F42;border:1px solid #009F42;background-opacity: .1" verticalAlign="center" horizontalAlign="right" />
                
                <box width="70" height="25" style="background-color: #2D70E7;border:1px solid #2D70E7;background-opacity: .1" verticalAlign="bottom" />
                <box width="50%" height="25" style="background-color: #2D70E7;border:1px solid #2D70E7;background-opacity: .1" verticalAlign="bottom" horizontalAlign="center" />
                <box width="70" height="25" style="background-color: #2D70E7;border:1px solid #2D70E7;background-opacity: .1" verticalAlign="bottom" horizontalAlign="right" />
            </box>
        </vbox>

        <vbox width="200">
            <section-header text="Options" />
            <grid>
                <label text="Width:" verticalAlign="center" />
                <slider pos="320" min="200" max="500" onchange="box1.width = this.value" />
                
                <label text="Height:" verticalAlign="center" />
                <slider pos="95" min="75" max="500" onchange="box1.height = this.value" />
            </grid>
        </vbox>
    </hbox>
</vbox>