<?xml version="1.0" encoding="utf-8" ?>
<vbox width="100%" style="padding:10px;">
    <section-header text="Default Cards" />

    <vbox style="spacing:20px;padding:20px;" styleName="default-background-solid">
        <hbox style="spacing:20px;">
            <card width="288" height="220" text="Some Card">
                <box width="100%" height="100%">
                    <label text="content" verticalAlign="center" horizontalAlign="center" styleName="card-title-label" />
                </box>    
            </card>    

            <vbox style="spacing:20px;">
                <card width="288" height="100" text="Some Other Card">
                    <box width="100%" height="100%">
                        <label text="content" verticalAlign="center" horizontalAlign="center" styleName="card-title-label" />
                    </box>    
                </card>    
                <card width="288" height="100">
                    <box width="100%" height="100%">
                        <label text="content" verticalAlign="center" horizontalAlign="center" styleName="card-title-label" />
                    </box>    
                </card> 
            </vbox>    
        </hbox>    
        
        <hbox style="spacing:20px">
            <card style="padding: 0px;">
                <image resource="images/img_avatar.png" width="288" height="288" style="border-radius: 4px;" />
                <vbox style="padding: 15px;" width="100%">
                    <hbox width="100%">
                        <label width="100%" text="Forename" styleName="card-title-label" />
                        <label text="John" styleName="card-title-label" />
                    </hbox>
                        
                    <hbox width="100%">
                        <label width="100%" text="Surname" styleName="card-title-label" />
                        <label text="Doe" styleName="card-title-label" />
                    </hbox>
                    
                    <hbox width="100%">
                        <label width="100%" text="Profession" styleName="card-title-label" />
                        <label text="Corpse" styleName="card-title-label" />
                    </hbox>
                </vbox>
            </card>

            <card style="padding: 0px;">
                <image resource="images/img_avatar2.png" width="288" height="288" style="border-radius: 4px;" />
                <vbox style="padding: 15px;" width="100%">
                    <hbox width="100%">
                        <label width="100%" text="Forename" styleName="card-title-label" />
                        <label text="Jane" styleName="card-title-label" />
                    </hbox>
                        
                    <hbox width="100%">
                        <label width="100%" text="Surname" styleName="card-title-label" />
                        <label text="Doe" styleName="card-title-label" />
                    </hbox>
                    
                    <hbox width="100%">
                        <label width="100%" text="Profession" styleName="card-title-label" />
                        <label text="Corpse" styleName="card-title-label" />
                    </hbox>
                </vbox>
            </card>
        </hbox>    
    </vbox>
    
</vbox>