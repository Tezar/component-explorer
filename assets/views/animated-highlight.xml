<vbox style="padding: 10px;" width="100%" height="100%">
    <style>
        .grid-item-container {
            width: 100px;
            height: 100px;
            pointer-events: true;
            padding: 5px;
            animation: shrink 0.2s linear 0s 1;
        }
        
        .grid-item-container:hover {
            animation: grow 0.2s linear 0s 1;
        }
        
        .grid-item {
            width: 100%;
            height: 100%;
            background-color: $solid-background-color;
            border-radius: 5px;
            border: 2px solid $selection-background-color;
            animation: unhighlightgriditem 0.2s linear 0s 1;
        }
        
        .grid-item:hover {
            animation: highlightgriditem 0.2s linear 0s 1;
        }
        
        .grid-item .image {
            width: 100%;
            height: 100%;
        }
        
        @keyframes grow {
            0% {
                padding-top: 5px;
                padding-left: 5px;
                padding-bottom: 5px;
                padding-right: 5px;
            }
            100% {
                padding-top: -5px;
                padding-left: -5px;
                padding-bottom: -5px;
                padding-right: -5px;
            }
        }

        @keyframes shrink {
            0% {
                padding-top: -5px;
                padding-left: -5px;
                padding-bottom: -5px;
                padding-right: -5px;
            }
            100% {
                padding-top: 5px;
                padding-left: 5px;
                padding-bottom: 5px;
                padding-right: 5px;
            }
        }
        
        @keyframes unhighlightgriditem {
            100% {
                background-color: $solid-background-color;
            }
        }
        
        @keyframes highlightgriditem {
            100% {
                background-color: $selection-background-color;
            }
        }
        
    </style>    
