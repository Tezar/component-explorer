                <box width="150" height="25" style="background-color: #2D70E7;border:1px solid #2D70E7;background-opacity: .1" horizontalAlign="center" />
            </hbox>

        </vbox>

        <vbox width="200">
            <section-header text="Options" />
            <grid>
                <label text="Width:" verticalAlign="center" />
                <slider pos="320" min="320" max="500" onchange="hbox4.width = this.value; hbox5.width = this.value;" />
