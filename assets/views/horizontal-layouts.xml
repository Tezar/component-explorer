                <box width="100" height="25" style="background-color: #2D70E7;border:1px solid #2D70E7;background-opacity: .1" />
                <box width="100" height="25" style="background-color: #B41C2B;border:1px solid #B41C2B;background-opacity: .1" />
                <box width="100" height="25" style="background-color: #009F42;border:1px solid #009F42;background-opacity: .1" />
                <box width="100" height="25" style="background-color: #2D70E7;border:1px solid #2D70E7;background-opacity: .1" />
            </hbox>

            <hbox id="hbox3" styleName="outline" style="padding:5px;" continuous="true">
                <box width="50" height="25" style="background-color: #B41C2B;border:1px solid #B41C2B;background-opacity: .1" />
                <box width="100" height="25" style="background-color: #009F42;border:1px solid #009F42;background-opacity: .1" />
                <box width="150" height="25" style="background-color: #2D70E7;border:1px solid #2D70E7;background-opacity: .1" />
                <box width="150" height="25" style="background-color: #B41C2B;border:1px solid #B41C2B;background-opacity: .1" />
                <box width="50" height="25" style="background-color: #009F42;border:1px solid #009F42;background-opacity: .1" />
                <box width="50" height="25" style="background-color: #2D70E7;border:1px solid #2D70E7;background-opacity: .1" />
                <box width="100" height="25" style="background-color: #B41C2B;border:1px solid #B41C2B;background-opacity: .1" />
                <box width="150" height="25" style="background-color: #009F42;border:1px solid #009F42;background-opacity: .1" />
                <box width="150" height="25" style="background-color: #2D70E7;border:1px solid #2D70E7;background-opacity: .1" />
            </hbox>
        </vbox>

        <vbox width="200">
            <section-header text="Options" />
            <grid>
                <label text="Width:" verticalAlign="center" />
                <slider pos="320" min="320" max="500" onchange="hbox2.width = this.value; hbox3.width = this.value" />
            </grid>
        </vbox>
    </hbox>
    
