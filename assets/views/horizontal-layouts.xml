<?xml version="1.0" encoding="utf-8" ?>
<vbox width="100%" style="padding:10px;">
    <hbox width="100%">
        <vbox width="100%">
            <section-header text="Standard" />
            <hbox id="hbox1" styleName="outline" style="padding:5px;" height="75">
                <box width="33%" height="25" style="background-color: #B41C2B;border:1px solid #B41C2B;background-opacity: .1" />
                <box width="34%" height="25" style="background-color: #009F42;border:1px solid #009F42;background-opacity: .1" verticalAlign="center" />
                <box width="33%" height="25" style="background-color: #2D70E7;border:1px solid #2D70E7;background-opacity: .1" verticalAlign="bottom" />
            </hbox>
        </vbox>

        <vbox width="200">
            <section-header text="Options" />
            <grid>
                <label text="Width:" verticalAlign="center" />
                <slider pos="320" min="300" max="500" onchange="hbox1.width = this.value" />
                
                <label text="Height:" verticalAlign="center" />
                <slider pos="75" min="35" max="300" onchange="hbox1.height = this.value" />
            </grid>
        </vbox>
    </hbox>

    <spacer height="30" />

    <hbox width="100%">
        <vbox width="100%">
            <section-header text="Continuous" />
            <hbox id="hbox2" styleName="outline" style="padding:5px;" continuous="true">
                <box width="100" height="25" style="background-color: #B41C2B;border:1px solid #B41C2B;background-opacity: .1" />
                <box width="100" height="25" style="background-color: #009F42;border:1px solid #009F42;background-opacity: .1" />
                <box width="100" height="25" style="background-color: #2D70E7;border:1px solid #2D70E7;background-opacity: .1" />
                <box width="100" height="25" style="background-color: #B41C2B;border:1px solid #B41C2B;background-opacity: .1" />
